@page
@model SVUStudent.Pages.Reset_passwordModel
@{
    ViewData["Title"] = "Reset-Password";
    Layout = "_CommonLayout";
}

<main id="app">
    <div class="main-wrapper container">
        <div class="main-content">
          <section class="section">
            <div class="section-body">
              <div class="container">
                <div class="tab-content" style="width: 50%;margin: 50px auto;">
                  <div class="card">
                    <div class="card-body">
                      <div class="tab-content" id="myTabContent2">
                        <div class="tab-pane fade show active" id="aform" role="tabpanel" aria-labelledby="aform-tab3">
                          <div class="card-body">
                            <div class="row">
                                <div class="col-md-12">
                                    <h3> RESET YOUR PASSWORD </h3>
                                </div>
                            </div>
                            <div class="row">
                              <div class="col-md-12">
                                <div class="form-group">
                                  <label> New Password </label>
                                  <div class="input-group">
                                    <div class="input-group-prepend">
                                      <div class="input-group-text"> <i class="fas fa-lock"></i> </div>
                                    </div>
                                    <input type="password" class="form-control" placeholder="Enter Your New password">
                                  </div>
                                </div>
                              </div>
                              <div class="col-md-12">
                                <div class="form-group">
                                  <label> Confirm Password </label>
                                  <div class="input-group">
                                    <div class="input-group-prepend">
                                      <div class="input-group-text"> <i class="fas fa-lock"></i> </div>
                                    </div>
                                    <input type="password" class="form-control" placeholder="Enter Your confirm password">
                                  </div>
                                </div>
                              </div>
                            </div>
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="card-footer">
                                        <a href="Login"> <button class="btn btn-primary btnNext w-100" > Submit <i class="fas fa-arrow-right"></i></button> </a>
                                    </div>
                                </div>
                            </div>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </section>
        </div>
    </div>
</main>