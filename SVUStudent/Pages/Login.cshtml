@page
@model SVUStudent.Pages.LoginModel
@{
    ViewData["Title"] = "Login";
    Layout = "_CommonLayout";
}

        <div class="row">
          <div class="col-12 col-sm-8 col-md-6  col-lg-6  col-xl-4 m-auto ">
            <div class="card card-primary">
              <div class="login-brand">
                <img src="~/img/brand/logo-t.png" alt="logo" width="250">
                </div>
              <div class="card-body">
                <form method="POST" action="#" class="needs-validation" novalidate="">
                  <div class="form-group">
                    <label for="email">Username / Admission No.</label>
                    <input id="name" type="text" class="form-control" name="name" tabindex="1" required="" autofocus="">
                    <div class="invalid-feedback">
                      Please fill in your Username / Admission No.
                    </div>
                  </div>
                  <div class="form-group">
                    <div class="d-block">
                    	<label for="password" class="control-label">Password</label>
                      <div class="float-right">
                        <a href="Forgot_password" class="text-small color-ft">
                          Forgot Password?
                        </a>
                      </div>
                    </div>
                    <input id="password" type="password" class="form-control" name="password" tabindex="2" required="">
                    <div class="invalid-feedback">
                      please fill in your password
                    </div>
                  </div>
                  <div class="form-group">
                    <div class="custom-control custom-checkbox">
                      <input type="checkbox" name="remember" class="custom-control-input" tabindex="3" id="remember-me">
                      <label class="custom-control-label" for="remember-me">Remember Me</label>
                    </div>
                  </div>
                  <div class="form-group">
                    <a href="Index" class="btn btn-primary btn-lg btn-block" tabindex="4">
                      Login
                    </a>
                  </div>
                  <div class="simple-footer">
                      Copyright © Avia Technologies
                  </div>
                </form>
              </div>
            </div>
          </div>
        </div>
      
        